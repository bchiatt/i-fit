.row
  .col-xs-3
    h2 Info
    h4 Name: {{client.name}}
    h4 Age: {{client.age}}
    h4 Height: {{client.height}} inches
    h4 Weight: {{client.weights[client.weights.length - 1].wt}} lbs.
    h4 Last Weigh In: {{client.weights[client.weights.length -1].when | date:'MM/dd/yyyy'}}
    h4 Gender: {{client.gender}}

    button.btn-primary(ng-click='toggleForm()') Edit Info
    form(role='form', novalidate, name='profileForm', ng-show='hideForm')
      .form-group
        label(for='name') Name
        input.form-control#name(required, ng-model='user.name', type='text', name='name', autofocus)
      .form-group
        label(for='age') Age
        input.form-control#age(required, ng-model='user.age', type='number', name='age')
      .form-group
        label(for='height') Height
        input.form-control#height(required, ng-model='user.height', type='number', name='height')
      .form-group
        label(for='weight') Weight
        input.form-control#weight(required, ng-model='user.weight', type='number', name='weight')
      .form-group
        label(for='gender') Gender
        select.form-control#gender(required, ng-model='user.gender', type='dropdown', name='gender')
          option Male
          option Female
      button.btn.btn-primary(type='submit', ng-show='profileForm.$valid', ng-click='update()') Update
  .col-xs-6
    h4 Weight Graph  &  BMI Graph
    .panel
      .panel-heading
        .panel-title Weight Graph
          .panel-body WtGraph
            #WtGoal
              #weightActualBar(ng-style='{height:client.goals.wt + "px"}')
              #weightGoalBar(ng-style='{height:client.weights[client.weights.length - 1].wt + "px", position:absolute, bottom:0, left:20px}')





  .col-xs-3
    h4 Goals
    form(role='form', novalidate, name='goalForm')
      .form-group
        label(for='weight') Weight
        input.form-control#weight(required, ng-model='goals.weight', type='number', name='weight')
      .form-group
        label(for='bmi') BMI
        input.form-control#bmi(required, ng-model='goals.bmi', type='number', name='bmi')
      .form-group
        label(for='calories') Calories (per day)
        input.form-control#calories(required, ng-model='goals.calsPerDay', type='number', name='calories')
      .form-group
        label(for='minutes') Exercise (minutes/day)
        input.form-control#minutes(required, ng-model='goals.exerMinsPerDay', type='number', name='minutes', autofocus)
      button.btn.btn-primary(type='submit', ng-show='profileForm.$valid', ng-click='update()') Update
